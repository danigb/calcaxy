

<div class="home_image">
  <%= image_tag @home.public_file(:home) if @home.attachment(:home) %>
</div>


<div class="updates">
  <label>LAST UPDATES:</label>
  <% @updates.each do |update| %>
    <%= link_to update[:title], update[:path] %>
  <% end %>
</div>

<div id="calc_form">
  <% form_tag :action => 'home' do %>
    <div id="define-calc">
      <%= submit_tag 'c a l c = ' %>
      c<%= text_field_tag :cword %> a<%= text_field_tag :aword %>
      l<%= text_field_tag :lword %> c<%= text_field_tag :ccword %>

    </div>
  <% end %>
  <ul>
    <% @metas.each do |meta| %>
      <li><%= as_calc meta.value %> </li>
    <% end %>
  </ul>
</div>


<script type="text/javascript">
  $(function() {
    $("form").submit(function() {
      var completed = true;
      $(this).find("input[type=text]").each(function() {
        if ($.trim(this.value) == '') {
          this.focus();
          completed = false;
          return false;
        }
      }).focus(function() {
        $(".focused").removeClass("focused");
        $(this).addClass("focused");
      });
      return completed;
    });
    $("#cword").focus().addClass("focused");
    $(window).scrollTop(0);
  });
</script>
